srcdir = @srcdir@
VPATH = @srcdir@

include @top_srcdir@/mk/gnu.bsdvars.mk

.SUFFIXES :
.SUFFIXES : .html .xhtml .js .xml .xpl .xbl

RESOURCES = htmlpp.xsl htmlwrap.xsl
TARGETS = htmlpp htmlwrap

XSLTPROC = /usr/bin/xsltproc
INSTALL = /usr/bin/install

# Rules
all : build

build : ${TARGETS}

install: ${TARGETS}
	[ -d ${pkglibexecdir} ] || ${INSTALL} -d ${pkglibexecdir}
	for FILE in ${.ALLSRC}; do\
		${INSTALL} $${FILE} ${pkglibexecdir}/$${FILE};\
	done;
	for FILE in ${RESOURCES}; do\
		${INSTALL} ${srcdir}/$${FILE} ${pkglibexecdir}/$${FILE};\
	done;

clean : 
	-rm ${TARGETS}

htmlpp: htmlpp.pl
	cp ${.IMPSRC} ${.TARGET}
	
htmlwrap: htmlwrap.pl
	cp ${.IMPSRC} ${.TARGET}
	
