srcdir = @srcdir@
VPATH = @srcdir@

include @top_srcdir@/mk/gnu.bsdvars.mk

# WARN notdir trims everything upto and including the final "/"
dirname = ${notdir ${.CURDIR}}
installdir = ${pkgtestdir}/${dirname}

.SUFFIXES :
.SUFFIXES : .html .xhtml .js .css

RESOURCES = normal.html pre-processed.html normal.css \
	decor/decor.html decor/decor.css decor/pre-processed.html
TARGETS = 

# Rules
all : build

build : ${TARGETS}

install: ${RESOURCES}
	[ -d ${pkglibexecdir} ] || ${INSTALL} -d ${installdir}
	for fname in ${RESOURCES}; do \
		${INSTALL} ${srcdir}/$$fname ${installdir}/$$fname;\
	done

clean : 
	-rm ${TARGETS}

